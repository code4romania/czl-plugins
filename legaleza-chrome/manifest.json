{
    "manifest_version": 2,
    "name": "Legaleza",
    "description": "Dictionar legalez-roman inline.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "default-popup/default-popup.html",
        "default_title": "Legaleza"
    },
    "icons": {
        "16":"icon.png",
        "48":"icon.png",
        "128":"icon.png"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://facebook.com/*",
        "https://messenger.com/*"
    ],
    "content_scripts": [
        {
            "js": [
                "lib/promise.js",
                "lib/log-prefix.js",
                "keyword-matcher.js",
                "text-manipulation-utils.js",
                "dictionary.js",
                "css-inject.js",
                "app.js"
            ],
            "matches": [
                "*://www.onoratainstanta.ro/*",
                "<all_urls>"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "resources/*.json",
        "resources/*.css"
    ]
}